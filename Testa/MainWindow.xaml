<Window x:Class="Testa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Testa"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBox x:Name="Val1" Text="a123" Margin="5"/>
                <TextBlock Text="/" Margin="5"/>
                <TextBox x:Name="Val2" Text="123" Margin="5"/>
            </StackPanel>
            <Button Content="Calculate" Height="30" Click="Button_Click"/>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Result:" Margin="5"/>
                <TextBlock x:Name="Result" Text="?" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
